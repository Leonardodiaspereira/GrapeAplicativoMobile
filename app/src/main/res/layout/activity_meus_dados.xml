<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meus Dados"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="24dp" />

    <!-- Nome -->
    <EditText
        android:id="@+id/edtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:textColor="@color/white"
        android:textColorHint="@color/green"
        android:backgroundTint="@color/white"
        android:layout_below="@id/tvTitle"
        android:padding="10dp" />

    <!-- E-mail -->
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/green"
        android:backgroundTint="@color/white"
        android:layout_below="@id/edtNome"
        android:padding="10dp"
        android:layout_marginTop="16dp" />

    <!-- Telefone -->
    <EditText
        android:id="@+id/edtTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefone"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/green"
        android:backgroundTint="@color/white"
        android:layout_below="@id/edtEmail"
        android:padding="10dp"
        android:layout_marginTop="16dp" />

    <!-- CPF -->
    <EditText
        android:id="@+id/edtCpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CPF"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/green"
        android:backgroundTint="@color/white"
        android:layout_below="@id/edtTelefone"
        android:padding="10dp"
        android:layout_marginTop="16dp" />

    <!-- Senha -->
    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/green"
        android:backgroundTint="@color/white"
        android:layout_below="@id/edtCpf"
        android:padding="10dp"
        android:layout_marginTop="16dp" />

    <!-- Digite a Nova Senha -->
    <EditText
        android:id="@+id/edtNovaSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a nova senha"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/green"
        android:backgroundTint="@color/white"
        android:layout_below="@id/edtSenha"
        android:padding="10dp"
        android:layout_marginTop="16dp" />

    <!-- Confirmar Nova Senha -->
    <EditText
        android:id="@+id/edtConfirmarNovaSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmar nova senha"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/green"
        android:backgroundTint="@color/white"
        android:layout_below="@id/edtNovaSenha"
        android:padding="10dp"
        android:layout_marginTop="16dp" />

    <!-- Botão para salvar alterações -->
    <Button
        android:id="@+id/btnSalvarAlteracoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Alterações"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:layout_below="@id/edtConfirmarNovaSenha"
        android:layout_marginTop="24dp" />
</RelativeLayout>
